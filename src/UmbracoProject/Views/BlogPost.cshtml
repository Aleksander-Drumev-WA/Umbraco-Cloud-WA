@using Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core

@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.BlogPost>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";

    var currentCulture = @Model.GetCultureFromDomains().Substring(0, 2);
}

<head>
    <title>@Model.Value("blogPostTitle")</title>
</head>

<div class="content-wrapper">
        <div class="post-wrapper"
            style="opacity: 1; transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg); transform-style: preserve-3d;">
            <div style="background-image:url(&quot;@Model.Value("blogPostPhoto")&quot;)" class="blog-image blog-page"></div>
            <div class="post-content">
                <h1 class="blog-title">@Model.Value("blogPostTitle")</h1>
                <div>
                    <div class="post-info">@Model.Value("blogPostCreatedOn")</div>
                    @{
                        var category = Model.Value<IPublishedContent>("CategoryUrl");
                        var url = category.Url();
                     }
                    <div class="post-info">|</div><a href="@url" class="post-info link">@Model.Value("categoryName")</a>
                </div>
                <div class="grey-rule"></div>
                <div class="body-copy w-richtext">
                    @Model.Value("blogPostFullText")
                </div>
            </div>
        </div>
        <div class="button-wrapper"><a href="/all-posts/@currentCulture/" class="button w-button">←&nbsp;All posts&nbsp;</a></div>
    </div>