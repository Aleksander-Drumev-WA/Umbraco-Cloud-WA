@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Contact>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "Master.cshtml";
}
<head>
    <title>@Model.Value("contactHeading")</title>
</head>

<div class="content-wrapper">
    <div class="post-wrapper"
         style="opacity: 1; transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg); transform-style: preserve-3d;">
        <div class="post-content">
            <div class="body-copy w-richtext">
                <h1>@Model.Value("contactHeading")</h1>
                @Model.Value("contactText")
            </div>
            <div class="form-wrapper w-form">
                <form method="post" asp-action="Submit" asp-controller="Contact">
                    <label >@Model.Value("senderNameLabel")</label>
                    <input type="text" name="name" placeholder="@Model.Value("senderNamePlaceholder")" maxlength="256" class="text-field w-input">
                    <label>@Model.Value("senderEmailLabel")</label>
                    <input type="email" name="email" data-name="Email" placeholder="@Model.Value("senderEmailPlaceholder")" maxlength="256" class="text-field w-input">
                    <label>@Model.Value("contactFormMessageLabel")</label>
                    <textarea name="Message" placeholder="@Model.Value("contactFormMessagePlaceholder")" maxlength="5000" data-name="Message" class="text-field text-area w-input"></textarea>
                    <input type="submit" value="@Model.Value("contactSubmitButton")" data-wait="Please wait..." class="button w-button">
                </form>
                <div class="success-message w-form-done">
                    <p class="success-text">Thank you! Your submission has been received!</p>
                </div>
                <div class="w-form-fail">
                    <p>Oops! Something went wrong while submitting the form</p>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="./js/jquery-3.5.1.min.dc5e7f18c8.js" type="text/javascript"></script>